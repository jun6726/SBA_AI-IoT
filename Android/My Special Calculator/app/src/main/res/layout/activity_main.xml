<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinerLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="MainActivity">

    <requestFocus/>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="#494343"
        android:ems="20"
        android:textColor="#ffffff"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        //첫째줄
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_left"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yleft"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_right"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yright"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_del"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ydel"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_div"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ydiv"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_10p"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/y10"
                android:textSize="20dp" />

        </LinearLayout>

        //둘째줄
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/y7"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/y8"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/y9"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_mul"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ymul"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_15p"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/y15"
                android:textSize="20dp" />
        </LinearLayout>

        //셋째줄
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/y4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/y5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/y6"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ymin"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_change"
                android:layout_width="170px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yellow"
                android:textSize="20dp" />
        </LinearLayout>

        //마지막두줄
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/y1"
                        android:textSize="20dp" />


                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/y2"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/y3"
                        android:textSize="20dp" />


                    <Button
                        android:id="@+id/button_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/yplus"
                        android:textSize="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/buttonC"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/yc"
                        android:textSize="20dp" />


                    <Button
                        android:id="@+id/button0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/y0"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button_dot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ydot"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <Button
                    android:id="@+id/button_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/yresult"
                    android:textSize="20dp" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>